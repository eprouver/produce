#header
  position: relative
  background: color-footer-background

#header-outer
  height: 100%
  position: relative

#header-inner
  position: relative
  overflow: hidden

#banner
  position: relative
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: url(banner-url) center #000
  background-size: cover
  z-index: 0
  min-height: 60vh
  float: left
  background-attachment: fixed;
  background-position: bottom;

#header-title
  text-align: center
  height: logo-size
  position: absolute
  top: 50%
  left: 0
  margin-top: logo-size * -0.5

$logo-text
  text-decoration: none
  color: #fff
  font-weight: 300

#logo
  @extend $logo-text
  font-size: 18vmin
  line-height: 0.9em
  letter-spacing: -0.025em
  transform: rotate(-10deg) translateY(-23vmin)
  display: block
  text-shadow: 3px -1px black, -0.03em 0.03em 0 #000, -0.06em 0.06em 1px #9100FF, -0.09em 0.09em 2px #000
  font-weight: bold
  transform-origin: 50% 0%;

#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px

#subtitle-wrap
  position: absolute;
  top: 16.6vmin;
  right: -15px;
  width: 38vw;
  background: rgba(255, 255, 255, 0.81);
  padding: 1.5em;
  font-size: 1.5vmin;
  border-radius: 2em;
  cursor: pointer;
  &:hover
    background: white
  #subtitle
    color: #2e2435;
    font-size: 1.4em;
    letter-spacing: -0.01em;
    font-weight: bold;

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: #fff
  opacity: 0.6
  text-decoration: none
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777

#header-game
  font-family: arial;
  background: rgba(46, 36, 53, 0.9);
  color: #000;
  width: 100%;
  position: absolute;
  left: 0;
  height: 60vh
  overflow: auto
  .widget-wrap
    margin: 0;
    li
      float: left;
      margin-right: 5px;
  h1
    text-align: left;
    font-size: 3.2vw;
    padding-bottom: 1em;
    font-weight: bold;
    text-shadow: -1px 3px black, -3px 4px #7B2FC1, -4px 5px black;
  a
    color: white;
    text-decoration: none;
  .btn
    text-align: center;
    background: #4AA055;
    padding: 0.8em;
    color: white;
    border-radius: 5px;
    border-bottom: 1px solid green;
  .text-muted
    color: #aaa;
  .pull-right
    float:right;
  .flex-row
    display:flex
    justify-content: space-around
    @media (max-width: 660px)
      flex-direction: column;
    > *
      flex-grow: 0
  .flex-column
    padding: 15px
  label
    display: inline-block;
    max-width: 100%;
    margin-bottom: 5px;
    font-weight: 700;
    color: white
  .progress
    height: 0.7em;
    margin-bottom: 20px;
    overflow: hidden;
    background-color: #f5f5f5;
    border-radius: 4px;
    box-shadow: inset 0 1px 2px rgba(0,0,0,.1);
  .progress-bar
    float: left;
    width: 0;
    height: 100%;
    line-height: 20px;
    color: #fff;
    text-align: center;
    background-color: #4AA055;
    box-shadow: inset 0 -1px 0 rgba(0,0,0,.15);
    transition: width .6s ease;
  #incg-harvested
    text-align:right;
  #incg-level
    font-weight: bold
    position: relative
  #garden
    .plot-row
      display: block
      position: relative
      white-space: nowrap
    .plot-hold
      position:relative;
      display:inline-block;
    .plot
      color: #fff;
      width: 5em;
      height: 5em;
      margin: 0 1.5px;
      margin-bottom: 0.3em;
      border: none;
      background: #875420;
      outline: 0;
      font-size: 0.8em;
      border-radius: 1em;
      &:after
        content: 'dirt'
        float: left;
        width: 100%;
      &.plant
        background: #4AA055
        transition: 1s ease all
        &:after
          content: 'growing'
      &.harvest
        background: transparent;
        animation: tada 1s ease
        &:after
          font-size: 4em
          color: #FFBE36
          content: "â˜…"
          font-family: 'Glyphicons Halflings';
          text-shadow: 0 1px 1px #9F3F3A;
          position: relative
          left: 0;
          top: 0;
          animation: swing 1.5s infinite linear;
    .point-up
      color: #FFDC00
      animation: fadeOutUp 1s ease;
      position: absolute
      font-size: 2.5em;
      top: 0
      left: 50%
      margin-left: -0.5em;
      pointer-events: none;
